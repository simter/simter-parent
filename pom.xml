    <!-- http server: tomcat -->
    <profile>
      <id>tomcat</id>
      <dependencies>
        <dependency>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-starter-tomcat</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <!-- http server: jetty -->
    <profile>
      <id>jetty</id>
      <dependencies>
        <dependency>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-starter-jetty</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <!-- http server: undertow -->
    <profile>
      <id>undertow</id>
      <dependencies>
        <dependency>
          <groupId>org.springframework.boot</groupId>
