  <groupId>tech.simter</groupId>
  <artifactId>simter-parent</artifactId>
  <name>simter-parent</name>
  <version>0.3-SNAPSHOT</version>
  <packaging>pom</packaging>
  <description>Simter base maven dependencies manage</description>
  <url>https://github.com/simter/simter-parent</url>
  <licenses>
    <license>
      <name>MIT</name>
      <url>https://opensource.org/licenses/MIT</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <url>https://github.com/simter/simter-parent.git</url>
  </scm>
  <organization>
    <name>simter</name>
    <url>https://github.com/simter</url>
  </organization>
  <developers>
    <developer>
      <name>RJ Hwang</name>
      <email>rongjihuang@gmail.com</email>
    </developer>
  </developers>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/simter/simter-parent/issues</url>
  </issueManagement>
  <properties>
    <simter.version>0.3-SNAPSHOT</simter.version>
    <!-- maven global setting-->
    <java.version>1.8</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <maven.compiler.source>${java.version}</maven.compiler.source>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <maven.compiler.compilerVersion>${java.version}</maven.compiler.compilerVersion>

    <!-- upgrade some spring-boot component version to the latest-->
    <spring-boot.version>1.5.3.RELEASE</spring-boot.version>
    <maven-source-plugin.version>3.0.1</maven-source-plugin.version>
    <mockito.version>2.7.22</mockito.version>
    <hibernate.version>5.2.10.Final</hibernate.version>
    <hibernate-validator.version>5.4.1.Final</hibernate-validator.version>
    <mysql.version>6.0.6</mysql.version>
    <postgresql.version>42.0.0</postgresql.version>

    <gpg.executable>gpg2</gpg.executable>

    <!--<maven.javadoc.skip>true</maven.javadoc.skip>-->
    <!--<source.skip>false</source.skip>-->
  </properties>
  <dependencyManagement>
    <dependencies>
      <!-- simter modules -->
      <dependency>
        <groupId>tech.simter</groupId>
        <artifactId>simter-parent</artifactId>
        <version>${simter.version}</version>
      </dependency>
      <dependency>
